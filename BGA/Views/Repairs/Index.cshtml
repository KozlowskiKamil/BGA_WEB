@model IEnumerable<BGA.Entites.Repair>

@{
    ViewData["Title"] = "Index";
}

<h1>Historia napraw</h1>

<p>
    <a asp-action="Create">Dodaj nowyą naprawe</a>
</p>

<form method="get" asp-action="FilterBySerialNumber" asp-controller="Repairs">
    <label for="serialNumber">Skanuj numer seryjny:</label>
    <input type="text" name="serialNumber" id="serialNumber">
    <button type="submit">Szukaj</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Numer seryjny
            </th>
            <th>
                Imie nazwisko
            </th>
            <th>
                Osoba analizująca
            </th>
            <th>
                Pozycja
            </th>
            <th>
                Przyczyna wymiany
            </th>
            <th>
                Klient
            </th>
            <th>
                Tester / proces
            </th>
            <th>
                Maszyna
            </th>
            <th>
                Sposób naprawy
            </th>
            <th>
                Komentarz
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Analysis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocationComponent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Defect)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Client)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TesterProcess)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Machine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RepairMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalDate)
                </td>
                @*<td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>*@
            </tr>
        }
    </tbody>
</table>
